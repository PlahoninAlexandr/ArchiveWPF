        <Button x:Name="AddFile" Content="Add file" HorizontalAlignment="Left" Width="87" Margin="571,240,0,0" Height="31" FontSize="16" VerticalAlignment="Top"/>
        <Button x:Name="Mode" Content="Mode" HorizontalAlignment="Left" Width="87" Margin="144,326,0,0" Height="31" FontSize="16" VerticalAlignment="Top"/>
        <Button x:Name="Draw" Content="Draw" HorizontalAlignment="Left" Width="87" Margin="352,326,0,0" Height="31" FontSize="16" VerticalAlignment="Top"/>
        <Button x:Name="Extract" Content="Extract" HorizontalAlignment="Left" Width="87" Margin="571,326,0,0" Height="31" FontSize="16" VerticalAlignment="Top"/>
    </Grid>
</Window>
